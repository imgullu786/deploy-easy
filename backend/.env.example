# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/deployflow

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=deployflow-static-sites

# EC2 Configuration (for Docker deployments)
EC2_INSTANCE_IP=your-ec2-instance-ip
EC2_SSH_KEY_PATH=/path/to/your/ec2-key.pem

# Domain Configuration
BASE_DOMAIN=deployflow.app